datasource db {
  provider = "postgresql"
  url      = "postgresql://root:glowing-banana@event-db:5432/event_db"
}

generator db {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model events {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  organizer   String
  date        DateTime
  description String
  public      Boolean
}
