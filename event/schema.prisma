datasource db {
  provider = "postgresql"
  url      = "postgresql://root:glowing-banana@event-db:5432/event_db"
}

generator db {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

enum Response {
  ACCEPTED
  DECLINED
  NO_REPSONSE
}

model events {
  id          Int      @id @default(autoincrement())
  title       String
  organizer   String
  date        DateTime
  description String
  public      Boolean
}

model invites {
  id       Int      @id @default(autoincrement())
  event_id Int
  username String
  response Response @default(NO_REPSONSE)
}
